{
  "name": "book-a-meal",
  "version": "1.0.0",
  "description": "An application that allows customers to make food orders, helps the food vendor decide on what to eat and aids the caterer in managing the business",
  "main": "app.js",
  "scripts": {
    "prestart": "babel-node ./server/startMessage.js",
    "start": "npm-run-all --parallel dev",
    "dev": "nodemon --exec babel-node ./server/app.js",
    "generate-mock-data": "babel-node ./server/dummyBuildScripts/generateMockData",
    "migrate": "sequelize --env=test db:migrate:undo:all && sequelize --env=test db:migrate",
    "seed": "sequelize --env=test db:seed:all",
    "pretest": "npm-run-all migrate seed",
    "test": "cross-env NODE_ENV=test nyc mocha --reporter progress --require babel-core/register \"server/tests/**/*.test.js\" --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "security-check": "nsp check",
    "lint": "eslint \"server/**/*.js\" app.js --fix",
    "build": "babel server/ -d build --copy-files -s",
    "start-prod": "npm run build && node ./build/app.js",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bekomay26/Book-A-Meal.git"
  },
  "author": "Ogunbadejo Folajimi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bekomay26/Book-A-Meal/issues"
  },
  "homepage": "https://github.com/bekomay26/Book-A-Meal#readme",
  "devDependencies": {
    "aglio": "^2.3.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.1.2",
    "nsp": "^3.2.1",
    "nyc": "^11.7.1",
    "sequelize-cli": "^4.0.0"
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "base64-url": "^2.2.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "chai-http": "^4.0.0",
    "chalk": "^2.4.0",
    "cross-env": "^5.1.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-validator": "^5.2.0",
    "faker": "^4.1.0",
    "json-schema-faker": "^0.5.0-rc15",
    "jsonwebtoken": "^8.2.1",
    "moment": "^2.22.1",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.37.6",
    "supertest": "^3.0.0"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": "[node_module/**/node_modules]",
    "delay": "2500",
    "env": {
      "NODE_ENV": "development",
      "PORT": 4000
    }
  },
  "engines": {
    "node": "8.11.1",
    "npm": "5.6.0"
  }
}
